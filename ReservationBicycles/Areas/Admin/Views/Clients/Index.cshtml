@model IEnumerable<DAL.Entities.Client>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row py-3">
        <h3 class=" col-md-4 fw-bold text-center">Gestion Des Clients</h3>
        <div class="offset-4 col-4 text-end px-3">
            <a class="btn mb-0 text-normal" href="/Admin/Clients/Create" style="background-color:#344767; color:white;"><i class="material-icons text-sm">add</i>Nouveau Client</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Projects table</h6>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center justify-content-center mb-0">
                            <thead>
                                <tr class="text-center">
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">N°</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">NOM</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Telephone</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Adresse</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Email</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Date Creation</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">Totale Réservation</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var i in Model)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                @i.Id
                                            </td>
                                            <td>
                                                <div class="d-flex px-2">
                                                    <div>
                                                        <img src="~/images/icons8-client-64.png" class="avatar avatar-sm rounded-circle me-2" alt="user">
                                                    </div>
                                                    <div class="my-auto">
                                                        <h6 class="mb-0 text-sm fs-6  text-secondary">@i.NomClient  @i.PrenomClient</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-sm font-weight-bold mb-0">@i.Telephone</p>
                                            </td>
                                            <td>
                                                <span class="text-xs font-weight-bold">@i.Adresse</span>
                                            </td>
                                            <td>
                                                <span class="text-xs font-weight-bold">@i.Email</span>
                                            </td>
                                            <td>
                                                <span class="text-xs font-weight-bold">@i.DateCreation</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <span class="me-2 text-xs font-weight-bold">@i.LocationBicyclettes.Count()</span>
                                                    <div>
                                                        <div class="progress">
                                                            <div class="progress-bar bg-gradient-info" role="progressbar" aria-valuenow="(@i.LocationBicyclettes.Count())*100" aria-valuemin="0" aria-valuemax="100" style="width: (@i.LocationBicyclettes.Count())*100;"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle">
                                                <a class="text-decoration-none fw-bolder" href="/Admin/Clients/Edit/@i.Id"><img src="~/images/icons8-stylo-à-bille-48.png" style="width: 25px !important;" /></a> |
                                                <a class="text-decoration-none fw-bolder" href="/Admin/Clients/Delete/@i.Id"><img src="~/images/icons8-supprimer-48.png" style="width: 25px !important;" /><i class="bi bi-trash3-fill"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model HomeModelView
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!-- Start Banner Hero -->
<div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="1"></li>
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="2"></li>
    </ol>
        <div class="carousel-inner">
            @if (Model.ListBicyclette.Any())
            {
                var incre = 0;
                foreach (var i in Model.ListBicyclette)
                {
                    <div class="carousel-item @(incre == 0 ? "active" : "")">
                        <div class="container">
                            <div class="row p-5">
                                <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                                <img class="img-fluid" src="@Url.Action("GetImage", "Help", new { path = i.Photo })" alt="">
                                </div>
                                <div class="col-lg-6 mb-0 d-flex align-items-center">
                                    <div class="text-align-left align-self-center">
                                        <h1 class="h1 text-success"><b>Darajati</b></h1>
                                        <h3 class="h2">@i.Libelle</h3>
                                        <p>
                                            @i.ModeleNavigation.Description
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    incre++;
                }
            }
        </div>
    <a class="carousel-control-prev text-decoration-none w-auto ps-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="prev">
        <i class="fas fa-chevron-left"></i>
    </a>
    <a class="carousel-control-next text-decoration-none w-auto pe-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="next">
        <i class="fas fa-chevron-right"></i>
    </a>
</div>
<!-- End Banner Hero -->
<!-- Start Categories of The Month -->
<section class="container py-5">
    <div class="row text-center pt-3">
        <div class="col-lg-6 m-auto">
            <h1 class="h1">NOS MODELES</h1>
            <p>
                Voici les meilleurs modèles de bicyclettes que nous proposons à nos clients
            </p>
        </div>
    </div>
    <div class="row">
        @if (Model.modeleBicyclettes.Any())
        {
            @foreach (var i in Model.modeleBicyclettes)
            {
                <div class="col-12 col-md-4 p-5 mt-3">
                    <a href="#"><img src="@Url.Action("GetImage", "Help", new { path = i.Photo })" class="rounded-circle img-fluid border"></a>
                    <h5 class="text-center mt-3 mb-3">@i.Libelle</h5>
                    <p class="text-center"><a class="btn btn-mycolorPink" asp-action="Index" asp-controller="Boutique" asp-route-id="@i.Id">Voir Plus</a></p>
                </div>
            }
        }
